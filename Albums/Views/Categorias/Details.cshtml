<div class="row">    
    <div class="col-md-12">
        <h4>@Html.DisplayFor(model => model.Nombre)</h4>
        <hr />
    </div>

    @foreach (var i in Model.FilePaths) {

        <div class="col-md-3 col-sm-6 col-xs-6 cuadricula">
            <div class="col-xs-12 text-center">
                <img src="~/Uploads/Img/@Html.DisplayFor(modeli => i.Nombre)" alt="Alternate Text" width="100%" height="100%px" />
            </div>
        </div>
    }
    
</div>
